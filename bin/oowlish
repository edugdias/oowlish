#!/bin/bash

### BEGIN INIT INFO
# Provides:          foo
# Required-Start:    $local_fs $network
# Required-Stop:     $local_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Oowlish
# Description:       Run Oowlish service
### END INIT INFO

case "$1" in
  start)
    echo "Starting Oowlish..."
    sudo -u ec2-user bash -c 'cd /home/ec2-user/oowlish && ./start-oowlish.sh'
    ;;
  stop)
    echo "Stopping Oowlish..."
    kill -9 `ps -ef |grep -i "python3 app.py" | grep -v grep | awk '{print $2}'`
    ;;
  *)
    echo "Usage: /etc/init.d/oowlish {start|stop}"
    exit 1
    ;;
esac

exit 0
